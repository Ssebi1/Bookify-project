<%- include('header'); %>
<link rel="stylesheet" href="/registerStyle.css"> 
<title>Add teacher</title>
<style>
    body {
        background-color: white;
        margin: 0;
        padding: 0;
    }
</style>

<body>

    <%- include('navigation'); %>

    <div class="login--container">
        <% if (typeof message != "undefined") { %>
        <br>
        <div class="alert"><%= message %></div>
        <% } %>

        <form action="/add_teacher" method="post" class="login--form">
            <input type="text" name="username" placeholder="Username"><br>
            <input type="email" name="email" placeholder="Email" autocomplete="off"><br>
            <input type="password" name="password" placeholder="Password" autocomplete="off"><br>
            <input type="password" name="passwordConfirm" placeholder="Confirm Password" autocomplete="off"><br>

            <button type="submit" style="margin-bottom:30px">Add teacher</button>
        </form>


    </div>

</body>

</html>