<style>
    .navbar {
        width: 100%;
        height: 50px;
        background: linear-gradient(60deg, rgba(72, 19, 128, 1), rgba(127, 120, 210, 1));
    }

    .navbar ul{
        width: 90%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin:0 auto;
        height: 100%;
        padding:0;
    }

    .navbar ul li {
        display: inline-block;
        list-style-type: none;
    }

    .nav--title {
        color: white;
        font-size: 25px;
    }

    .nav--small {
        color: white;
        font-size: 20px;
    }
</style>

<div class="navbar">
    <ul>
        <a href="/">
            <li class="nav--title">BOOKIFY</li>
        </a>
        <a href="/profile">
            <li class="nav--small"><i class="fa fa-user-circle" style="margin-right:5px;"></i><%= username %></li>
        </a>
    </ul>
</div>