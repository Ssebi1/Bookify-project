<!-- Header -->
<%- include('header'); %>
<link rel="stylesheet" href="/profileStyle.css">
<title>Profile</title>
<!-- Navigation -->
<%- include('navigation'); %>

<div class="login--container">

    <form action="/user/action/edit_profile?id=<%= user.user_id %>" method="post" class="login--form">
        <input type="text" name="username" value="<%= user.username %>"><br>
        <input type="email" name="email" value="<%= user.user_email %>" autocomplete="off" disabled><br>
        <input type="password" name="password" placeholder="password hidden" autocomplete="off"><br>

        <button type="submit">Edit Profile</button>
        <a href="auth/logout">
            <div class="logout"><span class="logout--text">Log out</span></div>
        </a>
    </form>
    <br>
</div>

<!-- Footer -->
<%- include('footer'); %>

</body>

</html>